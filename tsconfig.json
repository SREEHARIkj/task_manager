{
    "compilerOptions": {
        "target": "es5",
        "module": "Node16",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "jsx": "react",
        "declaration": true,
        "composite": true,
        "allowJs": true,
        "rootDir": "./",

        // Linting
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*.tsx"],
    "references": [{ "path": "./apps/api" }, { "path": "./apps/web" }]
}
