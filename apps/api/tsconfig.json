{
    "extends": "@tsconfig/node21/tsconfig.json",
    "compilerOptions": {
        "lib": ["es2023"],
        "target": "es2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./.build/src",
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts"]
}
